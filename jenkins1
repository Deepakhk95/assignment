pipeline {
    agent any
    environment{
        BRANCH = 'master'
        GIT_REPO = 'https://github.com/Deepakhk95/assignment.git'
    }
    stages{
        stage('Test') {
            steps {
                script {
                    if(env.BRANCH == 'master') 
                        {						  
                          sh 'echo "This is a TESTING stage"'
                        }
						else {
						   error("Build failed")
                       }
                    }
                }
                
                git branch: env.BRANCH, url: env.GIT_REPO 
                echo"this is test1 stage"
        }
            }
        stage('Test2') {
            steps {
                script {
						 if(env.BRANCH == 'master') 
                            {						  
                             sh 'echo "This is a TESTING1 stage"'
                            }
						    else {
						    error("Build failed")
                       }
            }
        }
    }
}
